<nav
    id="navForm"
    xmlns:xf="http://www.w3.org/2002/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events">
    <xf:trigger>
        <xf:label>Inventaire après-décès</xf:label>
        <xf:toggle
            case="inventoryPanel"
            ev:event="DOMActivate"/>
    </xf:trigger>
    <xf:trigger>
        <xf:label>Acteurs</xf:label>
        <xf:toggle
            case="actorsPanel"
            ev:event="DOMActivate"/>
    </xf:trigger>
    <xf:trigger>
        <xf:label>Patrimoine</xf:label>
        <xf:toggle
            case="patrimonyPanel"
            ev:event="DOMActivate"/>
    </xf:trigger>
    <xf:trigger>
        <xf:label>Commentaires</xf:label>
        <xf:toggle
            case="commentPanel"
            ev:event="DOMActivate"/>
    </xf:trigger>
</nav>
