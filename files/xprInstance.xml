<?xml version="1.0" encoding="UTF-8"?>
<!-- eXperts model -->
<!--TODO
    dans la XSLT de Xforms, créer une règle pour xf:case/xf:label => création d'un h2 en html et pas un <label/>
-->
<expertise xmlns="">
    <meta/>
    <sourceDesc>
        <!--Réferences-->
        <idno type="unitid"/>
        <idno type="item"/>
        <facsimile from="" to=""/>
        <!--Description physique du pv et des annexes-->
        <physDesc>
            <extent sketch=""/>
            <!--@sketch="true/false"-->
            <appendices>
                <appendice>
                    <type type=""/>
                    <!--@type
                    - drawing = Dessin
                    - plan = Plan
                    - sketch = Croquis
                    - rough = Brouillon
                    - proxyPA = Pouvoir/procuration (acte sous seing privé) @rmq private agreement
                    - proxyNA = Pouvoir/procuration (acte notarié) @rmq notarial act
                    - petition = Requête
                    - other = autre-->
                    <extent/>
                    <desc/>
                    <note/>
                </appendice>
            </appendices>
        </physDesc>
    </sourceDesc>
    <description>
        <sessions>
            <!--@todo comment indiquer la durée de la vacation (demi-journée pour Paris, faubourgs et banlieue, journée en campagne-->
            <!--Dates de l'expertise -->
            <date when="" type=""/>
            <!--@type="paris/suburbs/province"/>-->
        </sessions>
        <places>
            <place type="paris">
                <address/>
                <complement/>
                <parish/>
                <city/>
                <district/>
                <owner/>
            </place>
        </places>
        <!--Type d'expertise-->
        <categories>
            <!--xprCategories-->
            <!--non répétable-->
            <designation rubric=""/>
        </categories>
        <!--Procedure encadrant l'expertise-->
        <procedure>
            <framework type=""><!--Valeur textuel de la procédure--></framework>
            <!--Origine de l'expertise-->
            <origination type=""><!--Valeur textuel de la procédure--></origination>
            <!--Intervention d'une institution-->
            <sentences>
                <sentence>
                    <orgName/>
                    <!--@rmq date est répétable pour toutes les sentences d'une institution-->
                    <date/>
                </sentence>
            </sentences>
            <!--Cause de l'expertise-->
            <case/>
            <!--Objet de l'expertise-->
            <objects/>
        </procedure>
        <participants>
            <experts>
                <expert context="" appointment="">
                    <name>
                        <surname/>
                        <forename/>
                    </name>
                    <title/>
                </expert>
            </experts>
            <clerks>
                <clerk>
                    <name>
                        <surname/>
                        <forename/>
                    </name>
                </clerk>
            </clerks>
            <parties>
                <!-- @todo partie Opposante/requérante-->
                <!-- @todo partie présente on non (on reste visiblement au niveau de la partie et non des personnes)-->
                <!---->
                <party role="" presence="" intervention="">
                    <!--@role="opponent/petitioner"-->
                    <!--@presence="true/false"-->
                    <!--@intervention="true/false"-->
                    <!--@rmq person est répétable pour chaque personne d'une même partie-->
                    <person>
                        <name>
                            <surname/>
                            <forename/>
                        </name>
                        <!--@quest On veut décrire la qualité et la profession d'une personne. En anglais "occupation" peut regrouper les deux. Utiliser le même et le répéter si besoin ? Utiliser profession ? state ?-->
                        <occupation/>
                        <!--<profession></profession>-->
                    </person>
                    <!--qualification individuelle-->
                    <status/>
                    <!-- Qualification individuelle-->
                    <!-- @quest la qualification individuelle ne doit-elle pas être rattachée à une personne plutôt qu'à une partie ? (dans le mesure où une parte peut regrouper plusieurs personnes ?)-->
                    <!-- Expert agissant pour cette partie -->
                    <expert/>
                    <!-- @rmq représentant/procureur sont répétables-->
                    <representative>
                        <name>
                            <surname/>
                            <forename/>
                        </name>
                        <occupation/>
                    </representative>
                    <prosecutor>
                        <name>
                            <surname/>
                            <forename/>
                        </name>
                    </prosecutor>
                </party>
            </parties>
            <!--Entrepreneur, architecte ou maître d’œuvre-->
            <craftmen>
                <craftman>
                    <name>
                        <surname/>
                        <forename/>
                    </name>
                    <occupation/>
                </craftman>
            </craftmen>
        </participants>
        <conclusions>
            <!--accord-->
            <!--@type="agreement/disagreement/noConclusion"-->
            <agreement type=""/>
            <!--conclusions d'expert-->
            <!--@quest en cas de désaccord, a-t-on besoin de les relier à un expert ? -->
            <opinion><!--répétable--></opinion>
            <!--montant global-->
            <estimate><!--sumTotal = montant total ?--></estimate>
            <!--coût de l'expertise => frais d'expertise = consultancy fees-->
            <fees detail="">
                <!--@detail="true/false"-->
                <total l="" d="" s=""/>
            </fees>
            <!--bourse commune = (to share expenses)-->
            <expenses mentioned="">
                <!--@mentioned = true/false-->
            </expenses>
        </conclusions>
    </description>
    <!-- TODO intégrer dans le formulaire une zone de texte libre pour y indiquer les problèmes rencontrés lors de la saisie et qui nécessiteraient de le reprendre plus en détail. Il nous permettra également de collecter des retours sur le formulaire. -->
</expertise>
