<?xml version="1.0" encoding="UTF-8"?>
<!-- eXperts model -->
<!--TODO
    dans la XSLT de Xforms, créer une règle pour xf:case/xf:label => création d'un h2 en html et pas un <label/>
-->
<expertise xmlns="">
    <meta/>
    <sourceDesc>
        <!--Réferences-->
        <idno type="unitid"/>
        <idno type="item"/>
        <facsimile from="" to=""/>
        <!--Description physique du pv et des annexes-->
        <physDesc>
            <extent sketch=""/>
            <!--@sketch="true/false"-->
            <appendices>
                <appendice type="" subtype="">
                    <extent/>
                    <desc/>
                    <note/>
                </appendice>
            </appendices>
        </physDesc>
    </sourceDesc>
    <description>
        <sessions>
            <!--@todo comment indiquer la durée de la vacation (demi-journée pour Paris, faubourgs et banlieue, journée en campagne-->
            <!--Dates de l'expertise -->
            <date when="" type=""/>
            <!--@type="paris/suburbs/province"/>-->
        </sessions>
        <places>
            <place type="paris">
                <address/>
                <complement/>
                <parish/>
                <city/>
                <district/>
                <owner/>
            </place>
        </places>
        <!--Type d'expertise-->
        <categories>
            <!-- @todo -->
            <!-- répétable -->
            <category type=""><!--récupération de la valeur textuelle--></category>
            <!-- @type="estimation/acceptation/registration/settlement/assessment"-->
            <!--non répétable-->
            <designation rubric=""></designation>
        </categories>
        <!--Procedure encadrant l'expertise-->
        <procedure>
            <framework type=""><!--Valeur textuel de la procédure--></framework>
            <!--Origine de l'expertise-->
            <origination type=""><!--Valeur textuel de la procédure--></origination>
            <!--Intervention d'une institution-->
            <sentences>
                <sentence>
                    <orgName/>
                    <!--@rmq date est répétable pour toutes les sentences d'une institution-->
                    <date/>
                </sentence>
            </sentences>
            <!--Cause de l'expertise-->
            <case/>
            <objects>
                <object type=""><!--Valeur textuel de la procédure--></object>
            </objects>
        </procedure>
        <participants>
            <experts>
                <expert context="" appointment="">
                    <name/>
                    <title/>
                </expert>
            </experts>
            <clerks>
                <clerk>
                    <name/>
                </clerk>
            </clerks>
            <parties>
                <party>
                    <!--@rmq person est répétable pour chaque personne d'une même partie-->
                    <person>
                        <name/>
                        <!--@quest On veut décrire la qualité et la profession d'une personne. En anglais "occupation" peut regrouper les deux. Utiliser le même et le répéter si besoin ? Utiliser profession ? state ?-->
                        <occupation/>
                        <!--<profession></profession>-->
                    </person>
                    <!-- Qualification individuelle-->
                    <!-- @quest la qualification individuelle ne doit-elle pas être rattachée à une personne plutôt qu'à une partie ? (dans le mesure où une parte peut regrouper plusieurs personnes ?)-->
                    <!-- Expert agissant pour cette partie -->
                    <expert/>
                    <!-- @rmq représentant/procureur sont répétables-->
                    <representative/>
                    <prosecutor/>
                    <!-- @todo partie Opposante/requérante-->
                    <!-- @todo partie présente on non (on reste visiblement au niveau de la partie et non des personnes)-->
                </party>
            </parties>
            <!--Entrepreneur, architecte ou maître d’œuvre-->
            <craftmen>
                <craftman>
                    <name/>
                    <occupation/>
                </craftman>
            </craftmen>
        </participants>
    </description>
    <!-- TODO intégrer dans le formulaire une zone de texte libre pour y indiquer les problèmes rencontrés lors de la saisie et qui nécessiteraient de le reprendre plus en détail. Il nous permettra également de collecter des retours sur le formulaire. -->
</expertise>
