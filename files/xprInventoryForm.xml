    <xf:group ref="xpr:objects">
        <xf:label>Objets artistiques</xf:label>
        <xf:group ref="xpr:mirror">
            <xf:label>Glaces</xf:label>
            <xf:input ref="@n">
                <xf:label>Nombre</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:painting">
            <xf:label>Peintures</xf:label>
            <xf:input ref="@n">
                <xf:label>Nombre</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:engraving">
            <xf:label>Gravures</xf:label>
            <xf:input ref="@n">
                <xf:label>Nombre</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:tapestry">
            <xf:label>Tapisserie</xf:label>
            <xf:input ref="@n">
                <xf:label>Nombre</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:sculpture">
            <xf:label>Sculptures</xf:label>
            <xf:input ref="@n">
                <xf:label>Nombre</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:vase">
            <xf:label>Vases</xf:label>
            <xf:input ref="@n">
                <xf:label>Nombre</xf:label>
            </xf:input>
        </xf:group>
