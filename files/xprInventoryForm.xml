            </xf:input>
            <xf:select1 ref="xpr:barometer/@owned" appearance="full">
                <xf:label>Baromètre</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:barometer/xpr:desc">
                <xf:label>Baromètre</xf:label>
            </xf:input>
            <xf:select1 ref="xpr:thermometer/@owned" appearance="full">
                <xf:label>Thermomètre</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
