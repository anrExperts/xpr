                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:desk/xpr:desc">
                <xf:label>Table à écrire</xf:label>
            </xf:input>
            <xf:select1 ref="xpr:drawingBoard/@owned" appearance="full">
                <xf:label>Table à dessin</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:drawingBoard/xpr:desc">
                <xf:label>Table à dessin</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:mathematical">
