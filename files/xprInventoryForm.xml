    <xf:group ref="xpr:comments">
        <xf:label>Commentaires libres</xf:label>
        <xf:textarea ref=".">
            <xf:label>Commentaires</xf:label>
            <xf:help>Ce champ permet de signaler les collectionneurs ou les aspects remarquables.</xf:help>
        </xf:textarea>
    </xf:group>
