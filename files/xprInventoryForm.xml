                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:graphometer/xpr:desc">
                <xf:label>Graphomètre</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:writing">
            <xf:label>Matériel pour écrire</xf:label>
        </xf:group>
        <xf:group ref="xpr:scientific">
            <xf:label>Objets scientifiques</xf:label>

            <xf:select1 ref="xpr:pendulum/@owned" appearance="full">
                <xf:label>Pendule</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:pendulum/xpr:desc">
