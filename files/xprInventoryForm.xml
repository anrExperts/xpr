            </xf:select1>
            <xf:input ref="xpr:compass/xpr:desc">
                <xf:label>Compas</xf:label>
            </xf:input>
            <xf:select1 ref="xpr:protractor/@owned" appearance="full">
                <xf:label>Rapporteur</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:protractor/xpr:desc">
                <xf:label>Rapporteur</xf:label>
            </xf:input>
            <xf:select1 ref="xpr:rule/@owned" appearance="full">
                <xf:label>Règle</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:rule/xpr:desc">
                <xf:label>Règle</xf:label>
            </xf:input>
            <xf:select1 ref="xpr:pencilHolder/@owned" appearance="full">
                <xf:label>Porte crayon</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:pencilHolder/xpr:desc">
                <xf:label>Porte crayon</xf:label>
            </xf:input>
        </xf:group>
        <xf:group ref="xpr:measurement">
            <xf:label>Instruments de mesure</xf:label>
            <xf:select1 ref="xpr:heightGauge/@owned" appearance="full">
                <xf:label>Toise</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
                    <xf:label ref="xpr:label"/>
                    <xf:value ref="xpr:value"/>
                </xf:itemset>
            </xf:select1>
            <xf:input ref="xpr:heightGauge/xpr:desc">
                <xf:label>Toise</xf:label>
            </xf:input>
            <xf:select1 ref="xpr:graphometer/@owned" appearance="full">
                <xf:label>Graphomètre</xf:label>
                <xf:itemset nodeset="instance('xprSupplement')/xpr:boolean/xpr:state">
